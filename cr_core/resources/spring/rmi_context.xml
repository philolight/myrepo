<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

  <bean id="confInfoService" class="com.lge.sm.cr_core.rmi_service.ConfInfoServiceImpl">
  </bean>

  <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
    <property name="serviceName" value="ConfInfoService" />
    <property name="service" ref="confInfoService" />
    <property name="serviceInterface"
      value="com.lge.sm.cr_interface.rmi_service.inf.ConfInfoService" />
    <property name="registryPort" value="1099" />
  </bean>

</beans>
